<% content_for :title do %>Tous les <%= @category.title %> <% end %> 
<div class="middle">
  <% unless @posts.empty? %>
    <% @posts.each do |post| %>
    <div class="post">
      <h2><%= post.title %></h2>
      <div class="body"><%= post.body %></div>
      <span class="date"><%= post.published_at %></span>
      <p class="comment"><a href="<%= post.url %>" rel="bookmark" title="<%= post.title %>" class="title"><%= post.comments.size  %> commentaire<%= post.comments.size > 1 ? 's' : '' %></a></p>
    </div>
</div>
    <% end %>
  <% else %>
    <div>
      <p>Aucun post disponible pr√©sentement...<p/>
    </div>
  <% end %>
</div>
<div class="clear"></div>


