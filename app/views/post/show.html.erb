<% content_for :title do %><%= @post.title %><% end %> 
<div class="post details">
  <h1><%= @post.title %><span><%= @post.published_at %></span></h1>
  <p><%= @post.body %></p>
</div>
<hr>
<div class="comments">
  <ul>
  <% for c in @post.comments.select{|c| c.is_root?} %>
      <li>
        <div class="header">
          <div class="username"><%= c.user %>:</div>
          <div class="date"><%= c.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
          <div class="reply"><a href="#">RÃ©pondre</a></div>
          <br class="clear" />
        </div>
        <div class="comment"><%= c.text %></div>
      </li>
      <% unless c.replies.empty? %>
        <ul class="replies">
        <% c.replies.each do |r| %>
          <li><span><b><%=r.user%>:</b> <%= r.text %></span></li>
        <% end %>
        </ul>
      <% end %>
  <%end%>
  </ul>
  <hr />
  <% form_tag :controller => 'post', :action => 'add_comment', :id => @post.id do %>
    <p>Nom:</p> 
    <input type="text" name="name" /><br /><br/>
    <p>Commentaire:</p>
    <textarea name="comment" cols="50" rows="5"></textarea><br /><br />
    <input type="submit" name="Add" id="Add">
  <% end %>
</div>


