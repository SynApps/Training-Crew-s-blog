<h1>Édition d'une image</h1>

<img src="<%= @image.amazon_url %>" width="<%= @image.width %>" height="<%= @image.height %>" alt="<%= @image.title %>" />
<% form_for(@image, :html =>{:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name, 'nom' %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :largeur %><br />
    <%= f.text_field :width %>
  </p>
  <p>
    <%= f.label :hauteur %><br />
    <%= f.text_field :height %>
  </p>
  <p>
    <%= f.label :title, 'titre' %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 50, :rows => 10 %>
  </p>
  <p>
    <%= f.label :datafile, 'fichier' %><br />
    <%= file_field 'upload', :datafile %>
  </p>
  <br />
  <p>
    <%= f.submit 'Mettre à jour' %> 
  </p>
<% end %>
<br />
<%= link_to 'Afficher', @image %> |  
<%= link_to 'Retour à la liste', images_path %>