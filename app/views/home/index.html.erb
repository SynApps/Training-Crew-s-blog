<% content_for :title do %>Entrainements de parkour à Montréal selon la méthode naturelle<% end %> 
<%= will_paginate @posts, :next_label => '>>', :previous_label => '<<', :separator => ' | ' %>
  <div class="middle">
    <% if !@posts.blank? %>
      <% for post in @posts %>
        <div class="post">
          <h2><%= link_to post.title, post.url, :rel => 'bookmark', :class => 'title', :title => post.title %></h2>
          <div class="body"><%= post.body %></div>
          <span class="date"><%= post.published_at %></span>
          <p class="comment"><%= link_to pluralize(post.comments.size, 'commentaire') , post.url, :rel => 'bookmark', :class => 'title', :title => post.title %></p>
        </div>
        <% unless post.id == @posts.last.id %>
        <hr />
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="rightmenu">
    <% unless @latest_pic.nil? %>
    <div class="last-picture">
        <img width="<%= @latest_pic.width %>" height="<%= @latest_pic.height %>" src="<%= @latest_pic.amazon_url %>" />
        <p><%= @latest_pic.title %></p>
    </div>
    <% end %>
    <div class="last-video">
      <div class="container"><%= @latest_video.small_embed %></div>
    </div>
    <div class="archive">
      <h3>Archives</h3>
      <ul>
        <% @categories.each do |cat| %>
          <li><%= link_to cat.title, category_path(:slug => cat.slug) %></li> 
        <% end %>
      </ul>
    </div>
  </div>
  <div class="clear"></div>


