<% content_for :title do %>Entrainements de parkour à Montréal selon la méthode naturelle<% end %> 
<% paginated_section(@posts, :next_label => '>>', :previous_label => '<<', :separator => ' | ') do %>
  <div class="middle">
    <% if !@posts.blank? %>
      <% for post in @posts %>
        <div class="post">
          <h2><%= post.title %></h2>
          <div class="body"><%= post.body %></div>
          <span class="date"><%= post.published_at %></span>
          <p class="comment"><a href="<%= post.url %>" rel="bookmark" title="<%= post.title %>" class="title"><%= post.comments.size  %> commentaire<%= post.comments.size > 1 ? 's' : '' %></a></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="rightmenu">
    <% unless @latest_pic.nil? %>
    <div class="last-picture">
        <h3>Dernière image</h3>
        <img src="<%= @latest_pic.amazon_url %>" />
        <p><%= @latest_pic.title %></p>
    </div>
    <% end %>
    <div class="last-video">
      <div class="container"><%= @latest_video.small_embed %></div>
    </div>
    <div class="archive">
      <h3>Archives</h3>
      <ul>
        <% @categories.each do |cat| %>
          <li><%= link_to cat.title, category_path(:slug => cat.slug) %></li> 
        <% end %>
      </ul>
    </div>
    
  </div>
  <div class="clear"></div>
<% end %>


