<h1>Listing albums</h1>

<table>
  <tr>
    <th>Nom</th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%=h album.name %></td>
    <td><%= link_to 'Show', :action => :show, :id => album.id %></td>
    <td><%= link_to 'Edit', :action => :edit, :id => album.id %></td>
    <td><%= link_to 'Destroy', :action => :destroy, :id => album.id, :confirm => 'Êtes-vous sûr?' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nouvel album', :action => :new %>