<% content_for :head do %><%= stylesheet_link_tag 'scaffold' %><% end %>
<h1>Édition d'un video</h1>

<% form_for(@video) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nom %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :embed %><br />
    <%= f.text_area :embed %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Mettre à jour' %>
  </p>
<% end %>

<%= link_to 'Afficher', @video %> |
<%= link_to 'Retour à la liste', videos_path %>